{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++", // Name of your task
            "type": "shell",
            "command": "g++",  // Assuming you have g++ compiler installed
            "args": [
                "-g", 
                "your_cpp_file.cpp",  // Replace with your actual filename
                "-o", 
                "your_program"        // Replace with the desired output file name
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task
            },
            "presentation": {
                "reveal": "always"  // Ensures terminal is shown when running the task
            },
            "problemMatcher": "$gcc"
        }
    ],
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "enter program name, for example ${workspaceFolder}/a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

    {
        "name": "(gdb) Attach",
        "type": "cppdbg",
        "request": "attach",
        "program": "enter program name, for example ${workspaceFolder}/a.exe",
        "MIMode": "gdb",
        "miDebuggerPath": "/path/to/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}
